<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.Info">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Account Information"
                    android:textColor="#CCFACB"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:textSize="@dimen/_19ssp"
                    android:shadowColor="#242323"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"

                    />
                <TextView
                    android:id="@+id/name"
                    android:layout_below="@+id/head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1A237E"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/totmem"
                    android:layout_below="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#1A237E"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:text="Total Member "/>
                <TextView
                    android:id="@+id/totamount"
                    android:text="TotalAmount"
                    android:layout_below="@+id/totmem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#1A237E"
                    android:textSize="@dimen/_14ssp"
                    android:layout_marginLeft="@dimen/_8ssp"
                    />
                <Button
                    android:id="@+id/chngpass"
                    android:layout_below="@+id/totamount"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_8ssp"
                    android:text="Change Password"/>
                <Button
                    android:id="@+id/delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/totamount"
                    android:layout_marginRight="@dimen/_8ssp"
                    android:text="Delete Account"/>
            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            app:cardElevation="1dp"
            app:cardCornerRadius="1dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            app:cardPreventCornerOverlap="false">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_4sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:textStyle="bold"
                    android:text="Name"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:textStyle="bold"
                    android:text="MobileNo"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Paid"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cloths"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="0.2"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>